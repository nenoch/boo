<p>List of links:</p>

<h3>Welcome <%= @user.email %></h3>

<ul id="links">
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL: <%= link.url %>
      Tag: <%= link.tags.map(&:name).join("; ")%>
    </li>
  <% end %>
</ul>

<form action="/links/new">
  <input type="submit" name="add_link" value="Add Link">
</form>
