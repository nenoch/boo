<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>

    <% if current_user %>
      Welcome <%= current_user.email %>
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
      Please refer to the following errors below:
        <ul id='errors'>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
    <% end %>
    <!-- <% if flash[:error] %>
      <div id='notice'><%= flash[:error] %></div>
    <% end %> -->
    <%= yield %>
    <!-- yields to the view -->
  </body>
</html>
